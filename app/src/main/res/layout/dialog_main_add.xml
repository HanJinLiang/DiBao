<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layoutAnimation="@anim/bottom_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_add_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/add_type_movie"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/main_add_pick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/add_type_pic"
            android:gravity="center"
            android:text="图库"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/main_add_memoire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/add_type_note"
            android:gravity="center"
            android:text="记事本"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
